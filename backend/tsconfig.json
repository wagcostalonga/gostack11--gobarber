{
  "compilerOptions": {

    "target": "es6",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "strictPropertyInitialization": false,

    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "allowSyntheticDefaultImports": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  }
}